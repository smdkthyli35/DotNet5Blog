@using Entities.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                @if (item.BlogImage == "")
                                {
                                <td>
                                    <img src="~/webwriter/assets/images/faces/face1.jpg" class="mr-2" alt="image">
                                </td>
                                }
                                else
                                {
                                <td>
                                    <img src="@item.BlogImage" class="mr-2" alt="image">
                                </td>
                                }
                                
                                <td>
                                    @item.BlogTitle
                                </td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                </td>
                                <td> @Convert.ToDateTime(item.BlogCreateDate).ToString("dd/MMM/yyyy") </td>
                                <td><a href="/Blog/BlogReadAll/@item.BlogId" class="btn btn-sm btn-primary">Detaylar</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>